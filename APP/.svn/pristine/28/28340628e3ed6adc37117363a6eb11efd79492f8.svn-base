								type: "get",
								success:function(data){
									vm.tableData=data.data;
								}, 
								error:function(data){
									 mui.toast('erro')
								}
							 });
						 },
						 abnormal: function(rowData) {
							 // localStorage.setItem 只能存储字符串，
							 // 所以在储存的时候先将对象转换为字符串 
							 localStorage.setItem('rowDatarepair', JSON.stringify(rowData));
							mui.openWindow({
								url: './repair.html',
								id: 'repair',
								createNew:true,
								extras: {
									// aeId: rowData.Aeid,
									// callDate:rowData.CallDate,
									// recMan:rowData.CallMan
								}
							});
							if(!mui.os.plus){
								localStorage.setItem('aeId',JSON.stringify(aeId));
							}
						 },
						 closeed:function(id){
							 var btnArray = ['否', '是'];
							 mui.confirm('闭合后将不能修改！', '确认闭合吗？', btnArray, function(e) {
								 if (e.index == 1) {
									 $.ajaxRequest('shyh.app/Equ/CloseTask?secretkey_for_vmwebapi=0987654321&appkey_for_vmwebapi=VMT-EM&aeid='+id+'',{
										type: "get",
										success:function(data){
											vm.getAjaxData();
										}, 
										error:function(data){
											 mui.toast('erro')
										}
									 });
								 } else {
									 
