<!doctype html>
<html>

	<head>
		<meta charset="utf-8">
		<title></title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="css/mui.css" rel="stylesheet" />
		<link href="../../../css/mui.min.css" rel="stylesheet" />
		<link rel="stylesheet" href="../../../js/element/index.css"/>
		<link rel="stylesheet" href="../../../css/common.css" type="text/css" charset="utf-8"/>
		<script src="../../../js/mui.min.js"></script>
		<script src="../../../js/jquery-3.4.1.js"></script>
		<script type="text/javascript" src="../../../js/common.js"></script>
		<style type="text/css">
			.aname {
				font-size: 16px;
			}
			.ainf {
				font-size: 12px;
			}
			.iplay {
				display: block;
				background: no-repeat right center url(data:image/png;base64,);
				background-size: 50px 44px;
				-ms-touch-action: auto;
			}
			/* 表单设置 */
			.mui-middle{
				 display:list-item;
				  text-align:center;
			}
			.el-form-item {
			    margin-bottom: 20px;
			}
			.el-input {
			    position: relative;
			    font-size: 14px;
			    display: inline-block;
			    width: 80%;
			}
			.el-textarea__inner {
			    display: block;
			    resize: vertical;
			    padding: 5px 15px;
			    line-height: 1.5;
			    -webkit-box-sizing: border-box;
			    box-sizing: border-box;
			    width: 90%;
			    font-size: inherit;
			    color: #606266;
			    background-color: #FFF;
			    background-image: none;
			    border: 1px solid #DCDFE6;
			    border-radius: 4px;
			    -webkit-transition: border-color .2s cubic-bezier(.645,.045,.355,1);
			    transition: border-color .2s cubic-bezier(.645,.045,.355,1);
			}
		</style>
	</head>
	<body>
		<header class="mui-bar mui-bar-nav" style="padding-right: 15px;">
			<a class="mui-action-back mui-icon mui-icon-left-nav mui-pull-left"></a>
			<h1 class="mui-title">设备保养</h1>
			<span class="mui-pull-right mui-icon mui-icon-home"></span>
		</header>
		<div class="mui-content" id="keepDetail">
			<div  class="mui-content-padded">
				<el-form :model="ruleForm" :rules="rules" ref="ruleForm" label-width="90px" class="demo-ruleForm">
				  <el-form-item label="设  备:"  >
				    <el-input v-model="ruleForm.EquName"></el-input>
				  </el-form-item>
				  <el-form-item label="计划名称:" >
				    <el-input v-model="ruleForm.EcpName"></el-input>
				  </el-form-item>
				  <el-form-item label="保养日期:" prop="McrDate">
				    <el-date-picker value-format="yyyy-MM-dd HH:mm:ss" placeholder="选择日期时间" label="日期:" type="datetime" v-model="ruleForm.McrDate">
				    </el-date-picker>
				  </el-form-item>
				  <el-form-item label="保养内容:" prop="McrLog">
				    <el-input type="textarea" v-model="ruleForm.McrLog"></el-input>
				  </el-form-item>
				  <el-form-item label="备件:" prop="MspIds">
					<el-badge :value="ruleForm.SelecteEquPars.length" class="item" type="primary">
					  <el-button  @click="dialogFormVisible = true" size="small">查看备件</el-button>
					</el-badge>
				  </el-form-item>
				</el-form>
				<!-- -//选择设备----------------------------------------------------- -->
				<el-dialog width="90%" title="设备详情" center :visible.sync="dialogFormVisible" @opened="opened">
				  <el-table
				      ref="multipleTable"
				      :data="tableData"
				      tooltip-effect="dark"
				      style="width: 100%"
				      @selection-change="handleSelectionChange">
				      <el-table-column
				        type="selection"
				        width="30" label="全选">
				      </el-table-column>
				      <el-table-column
				        label="名称"
				        width="140"
						prop="MspName">
				      </el-table-column>
				      <el-table-column
						label="数量" width="140"
				         prop="UseQty" >
						<template slot-scope="scope">
							 <el-input-number size="small" v-model="scope.row.UseQty" :min="0" ></el-input-number>
						</template>
				      </el-table-column>
				    </el-table>
				    <div style="margin-top: 20px;">
				      <el-button @click="toggleSelection(tableData)">{{selectAll}}</el-button>
				      <el-button type="primary" @click="send">提交</el-button>
				    </div>
				</el-dialog>
				<div v-show="showPicture">
					<h4 class="mui-pull-left">图片：</h4>
					<div class="mui-slider">
					  <div class="mui-slider-group mui-slider-loop" id="topImg">
					  </div>
					</div>
					<div class="buttonDelete" @click="deletePicture">删除</div>
				</div>
				
				<br/>
				<br/>
					<div class="button" @click="getImage">拍照</div>
					<br/>
					<!-- History list -->
					<ul id="history" class="dlist" style="text-align:left;">
						<li id="empty" class="ditem-empty">无历史记录</li>
					</ul>
					<br/>
					<div class="button button-waring"  @click="cleanHistory">清空历史记录</div>
					<br/>
					<button   @click="submitForm('ruleForm')" type="primary" class="mui-btn mui-pull-right" style="font-size: 15px;margin: .5em .7em;">
						保存
					</button>
					</div>
		</div>
<script src="../../../js/vue/vue.js"></script>
<script src="../../../js/mui.min.js"></script>
<script src="../../../js/element/index.js"></script>
<script src="../../../js/muiMethods.js"> </script>
<script type="text/javascript">
	var vm=new Vue({ 
		el:'#keepDetail',
		data:{
			//弹出框定义
			formLabelWidth:'120px',
			dialogFormVisible:false,
			selectAll:'全选',
			tableData: [],
			multipleSelection: [],
			McpId:'',
			equipData:[],//equipData:[{配件名称：数量}]
			ruleForm:{EquName:'',EcpName:'',McrDate:'',MspIds:'',McrLog:'',SelecteEquPars:[],AllSelectEquPars:[]},
			rules:{
			  McrDate: [
				{ required: true, message: '请选择日期', trigger: 'blur' }
			  ],
			  McrLog: [
				{ required: true, message: '请填写保养内容', trigger: 'blur' }
			  ]},
			/* -------------图片上传/清除------------- */
			fileList:[],
			showPicture:false,pictureIdList:[],//图片--
			rowData:{},userId:'',
			bUpdated:false,
			gentry:null,i:1,w:null,hl:null,de:null,ie:null,unv:true
		},
		mounted:function() {
			mui.init({
				
			})
			mui.plusReady(function() {
				// vm.rowData=JSON.parse(localStorage.getItem('rowData'));
				// H5 plus事件处理
					// 获取摄像头目录对象-->获取本地图片信息
					plus.io.resolveLocalFileSystemURL('_doc/', function(entry){
						entry.getDirectory('camera', {create:true}, function(dir){
							vm.gentry = dir;
							vm.updateHistory();
						}, function(e){
							// outSet('Get directory "camera" failed: '+e.message);
						} );
					}, function(e){
						// outSet('Resolve "_doc/" failed: '+e.message);
					});
				
				if(mui.os.plus){
				mui.plusReady(function(){
				vm.getAjaxData();
				})
			}else{
				vm.getAjaxData();
			}	
			});
			// 监听DOMContentLoaded事件
			document.addEventListener('DOMContentLoaded', function(){
				// 获取DOM元素对象
				vm.hl=document.getElementById('history');
				vm.le=document.getElementById('empty');
				vm.de=document.getElementById('display');
				if(vm.ie=document.getElementById('index')){
					vm.ie.onchange=vm.indexChanged;
				}
				// 判断是否支持video标签
				vm.unv=!document.createElement('video').canPlayType;
				vm.updateHistory();
			},false );
		 },
		methods:{
			getAjaxData:function(){
				vm.McpId=localStorage.getItem('McpId');
				vm.userId=JSON.parse(localStorage.getItem('userInfo')).UserId;
				vm.cleanHistoryFirst();//处理拍照图片缓存
			 //-----------表格数据
			 mui.ajaxRequest('shyh.app/Equ/GetWaringInfo?secretkey_for_vmwebapi=0987654321&appkey_for_vmwebapi=VMT-EM&McpId='+vm.McpId+'',{
				type: "get",
				success:function(data){
					if(JSON.stringify(data.code)==0){
						vm.ruleForm.EquName=data.data.EquName;
						vm.ruleForm.EcpName=data.data.EcpName;
						vm.tableData=data.data.AllSelectEquPars;
						console.log(JSON.stringify(data.data))
					}
				},
				error:function(data){
					 mui.toast('erro')
				}
			 });
			}, 
			//删除照片
			deletePicture:function(){
				for(var i=0;i<vm.pictureIdList.length;i++){
					mui.ajaxRequest('shyh.app/Goods/DelFile?secretkey_for_vmwebapi=0987654321&appkey_for_vmwebapi=VMT-EM&upid='+vm.pictureIdList[i],{
						type: "get",
						success:function(data){
							if(JSON.stringify(data.code)==0){
								 mui.toast('删除成功！');
								 window.location.reload();
							}
						},
						error:function(data){
							 mui.toast('删除失败！')
						}
					});
				}
				
			},
			
			// 拍照
			getImage:function (){
				// outSet('开始拍照：');
				var cmr = plus.camera.getCamera();
				cmr.captureImage(function(p){
					// outLine('成功：'+p);
					plus.io.resolveLocalFileSystemURL(p, function(entry){
						vm.createItem(entry);
						//上传图片提取---->再最后保存时候一并上传,提取出图片路径
						vm.fileList.push(entry.toLocalURL());
						
					}, function(e){
						// outLine('读取拍照文件错误：'+e.message);
					});
				}, function(e){
					// outLine('失败：'+e.message);
				}, {filename:'_doc/camera/',index:1});
				
			},
			uploadPicture:function(url,id){
				console.log(id)
				var wt=plus.nativeUI.showWaiting();
				var task=plus.uploader.createUpload(mui.baseUrl+'shyh.app/Equ/UploadFile?secretkey_for_vmwebapi=0987654321&appkey_for_vmwebapi=VMT-EM&mcrId='+id+'&userId='+vm.userId,
					{method:"post"},
					function(t,status){
						//上传完成
						if(status==200){
							// alert("上传成功："+t.responseText);
							// mui.toast("上传成功!")
							wt.close(); //关闭等待提示按钮
						}else{
							// alert("上传失败："+status);
							mui.toast("上传失败!")
							wt.close();//关闭等待提示按钮
						}
					}
				);
				 task.addFile(url,{key:url});
				 task.start();
			},
			// 添加播放项
			createItem:function (entry){
				var li = document.createElement('li');
				li.className = 'ditem';
				li.innerHTML = '<span class="iplay"><font class="aname"></font><br/><font class="ainf"></font></span>';
				li.setAttribute('onclick', 'vm.displayFile(this)' );
				vm.hl.insertBefore( li, vm.le.nextSibling );
				li.querySelector('.aname').innerText = entry.name;
				li.querySelector('.ainf').innerText = '...';
				li.entry = entry;
				vm.updateInformation(li);
				// 设置空项不可见
				vm.le.style.display = 'none';
			},
			// 获取录音文件信息
			updateInformation:function (li){
				if(!li || !li.entry){
					return;
				}
				var entry = li.entry;
				entry.getMetadata(function(metadata){
					li.querySelector('.ainf').innerText = dateToStr(metadata.modificationTime);
				}, function(e){
					// outLine('获取文件"'+entry.name+'"信息失败：'+e.message);
				} );
			},
			// 获取录音历史列表
			updateHistory:function (){
				if(vm.bUpdated||!vm.gentry||!document.body){//兼容可能提前注入导致DOM未解析完更新的问题
					return;
				}
				// for(var i in vm.gentry){
				// 	console.log(vm.gentry[i])
				// }
				var reader = vm.gentry.createReader();
				reader.readEntries(function(entries){
					for(var i in entries){
						if(entries[i].isFile){
							vm.createItem(entries[i]);
						}
					}
				}, function(e){
					// outLine('读取录音列表失败：'+e.message);
				});
				vm.bUpdated = true;
			},
			indexChanged:function (){
				vm.de.innerText = vm.ie.options[vm.ie.selectedIndex].innerText;
				vm.i = parseInt(vm.ie.value);
				// outLine(vm.de.innerText);
			},
			// 显示文件
			displayFile:function (li){
				if(vm.w){
					// outLine('重复点击！');
					return;
				}
				if(!li || !li.entry){
					ouSet('无效的媒体文件');
					return;
				}
				var name = li.entry.name;
				var suffix = name.substr(name.lastIndexOf('.'));
				var url = '';
				if(suffix=='.mov' || suffix=='.3gp' || suffix=='.mp4' || suffix=='.avi'){
					//if(unv){plus.runtime.openFile('_doc/camera/'+name);return;}
					url = '/plus/camera_video.html';
				} else {
					url = '/plus/camera_image.html';
				}
				vm.w=plus.webview.create(url,url,{hardwareAccelerated:true,scrollIndicator:'none',scalable:true,bounce:'all'});
				vm.w.addEventListener('loaded', function(){
					vm.w.evalJS('loadMedia("'+li.entry.toLocalURL()+'")');
					//w.evalJS('loadMedia("'+'http://localhost:13131/_doc/camera/'+name+'")');
				}, false );
				vm.w.addEventListener('close', function(){
					vm.w = null;
				}, false);
				vm.w.show('pop-in');
			},
			// 清除历史记录
			cleanHistoryFirst:function (){
				vm.hl.innerHTML = '<li id="empty" class="ditem-empty">无历史记录</li>';
				vm.le = document.getElementById('empty');
				// 删除音频文件
				// outSet('清空拍照录像历史记录：');
				vm.gentry.removeRecursively(function(){
					// Success
					// outLine('成功！');
				}, function(e){
					// outLine('失败：'+e.message);
				});
			},
			// 清除历史记录
			cleanHistory:function (){
				vm.hl.innerHTML = '<li id="empty" class="ditem-empty">无历史记录</li>';
				vm.le = document.getElementById('empty');
				// 删除音频文件
				// outSet('清空拍照录像历史记录：');
				vm.gentry.removeRecursively(function(){
					// Success
					// outLine('成功！');
				}, function(e){
					// outLine('失败：'+e.message);
				});
				
			},
			submitForm:function(formName) {
					vm.$refs[formName].validate(function(valid) {
					  if (valid) {
						vm.formDataSave();
					  } else {
						console.log('error submit!!');
						return false;
					  }
					});
				  },
				  //表单数据保存
		  formDataSave:function(){
			  console.log(vm.McpId);
			  console.log(vm.ruleForm.McrDate);
			  console.log(vm.userId);
			  console.log(vm.ruleForm.McrLog);
			  console.log(vm.equipData);
			mui.ajaxRequest('shyh.app/Equ/WriteRec?secretkey_for_vmwebapi=0987654321&appkey_for_vmwebapi=VMT-EM',{
				type: "post",
				data:{
					McpId:vm.McpId,
					McrDate:vm.ruleForm.McrDate,
					curManId:vm.userId,
					McrLog:vm.ruleForm.McrLog,
					MspIds:vm.equipData
				},
				success:function(data){
					 if(data.code==0){
						 console.log(JSON.stringify(data.data))
						 mui.toast('保存成功！');
						 if(vm.fileList.length>0&&data.data){
							 for(var i=0;i<vm.fileList.length;i++){
								 console.log(vm.fileList[i]);
								 vm.uploadPicture(vm.fileList[i],data.data);
							 }
						 }
						 mui.openWindow({
							url: './index.html',
							id: 'keepfitIndex',
							createNew:true
						 });
					 }
				}, 
				error:function(xhr){
					console.log(JSON.stringify(JSON.parse(xhr.response).message));
					mui.toast(JSON.stringify(JSON.parse(xhr.response).message),{ duration:'long'});
				}
			});
		  },
			//表单数据保存
			send:function(){
				vm.dialogFormVisible = false; 
				vm.ruleForm.SelecteEquPars=vm.multipleSelection;
				vm.addSelect(vm.multipleSelection);
			},
			addSelect:function(val){
				//备件数量数据拼接
				if(val.length>0){
					for(var i=0;i<val.length;i++){
						var obj=val[i].MspId+':'+val[i].UseQty+',';
						vm.equipData+=obj;
					}
				} 
			},
			toggleSelection:function(rows) { 
			   if(vm.selectAll=='全选'){
				  vm.selectAll='取消全选';
			   }else{
				vm.selectAll='全选';
			   }
			  if (rows) {
				rows.forEach(function(row) {
				  vm.$refs.multipleTable.toggleRowSelection(row);
				});
			  } else {
				vm.$refs.multipleTable.clearSelection();
			  }
			  
			},
			handleSelectionChange:function(val) {
				vm.multipleSelection=val;
			},
			opened:function(){
				vm.selectAll='全选';
				// vm.getEquipData();
				vm.equipData='';//打开窗口时先清空设备拼接的返回值
				vm.$refs.multipleTable.clearSelection();
			},
		}
	})
		
	// if(window.plus){
	// 	plusReady();
	// }else{
	// 	document.addEventListener('plusready', plusReady, false);
	// }
	</script>
</body>
	
</html>
